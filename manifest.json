{
    "manifest_version": 3,
    "name": "Issue link",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*/issues/*",
                "https://github.com/*/*/pull/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
